pipeline{
  agent any
  environment{
          PATH="/opt/maven/bin:$PATH"
     }
      stages{
        stage("git checkout"){
           steps{
             git 'https://github.com/venkat040/myweb.git'
               }
           }
             stage("build"){
           steps{
             sh 'mvn clean package'
             sh 'mv target/*.war target/myweb.war'
               }
           }
            stage("deploy"){
           steps{
             sshagent(['tomcat']) {
                 sh """
                 scp -o StrictHostKeyChecking=no -l target/myweb.war ec2-user@172.31.11.127:/opt/tomcat/webapps
                 ssh ec2-user@172.31.11.127 /opt/tomcat/bin/./.shutdown.sh
                  ssh ec2-user@172.31.11.127 /opt/tomcat/bin/./.startup.sh
                  """
                            } 
               }
       }
   }
